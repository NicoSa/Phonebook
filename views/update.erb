<% if defined?(allfilledin) %>
		<script>alert("<%= allfilledin %>");
		location = "/list";
		</script>
		<noscript>Update was made!<a href="/list">Return to phonebook</a></noscript>
<% end %>
<% if defined?(fillinall) %>
        <script>alert("<%= fillinall %>");
        location = "/update?id=<%= id %>";
        </script>
        <noscript>Please fill in all required fields</noscript>
<% end %>

<% if defined?(wrongformat) %>
        <script>alert("<%= wrongformat %>");
        location = "/update?id=<%= id %>";
        </script>
        <noscript>Please enter digits for phone number and letters for your name!</noscript>
<% end %>
<form method="post" action="update?id=<%= id %>">
		<input name="vorname" type="text" placeholder="First name" value="<%= vorname %>" required pattern="[A-Za-z\s]+"></input><br>
		<input name="nachname" type="text" placeholder="Last name" value="<%= nachname %>" required pattern="[A-Za-z\s]+"></input>
		<br>
		<input name="nummer" type="text" placeholder="Phone number" value="<%= nummer %>" required pattern="[0-9]+"></input><br>
		<button>Save</button></form>